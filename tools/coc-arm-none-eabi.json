{
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
            "rootPatterns": [".git", ".ccls-root", "compile_commands.json"],
            "initializationOptions": {
                "clang": {
                    "extraArgs": [
                        "--target=arm-none-eabi",
                        "--gcc-toolchain=/opt/<path/to/toolchain>/arm-none-eabi/"
                    ]
                },
                "cache": {
                    "directory": ".ccls-cache"
                },
                "client": {
                    "snippetSupport": true
                }
            }
        }
    }
}
